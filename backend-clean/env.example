# VoltWay Backend - Configurações de Ambiente
# =============================================

# Banco de Dados PostgreSQL
# -------------------------
# URL completa de conexão com o banco PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://voltway_user:senha@localhost:5432/voltway

# Autenticação JWT
# ---------------
# Chave secreta para assinar tokens JWT
# IMPORTANTE: Use uma chave forte em produção
JWT_SECRET=voltway-super-secret-jwt-key-2024-production-secure

# Configurações do Servidor
# -------------------------
# Porta do servidor (padrão: 3000)
PORT=3000

# Ambiente de execução
# Valores: development, production, test
NODE_ENV=production

# URL do Frontend
# ---------------
# URL onde o frontend está hospedado
# Usado para configuração de CORS
FRONTEND_URL=https://seu-frontend.com

# Configurações do Google OAuth
# -----------------------------
# Client ID do Google OAuth (opcional)
GOOGLE_CLIENT_ID=288143953215-o49d879dqorujtkpgfqg80gp7u9ai9ra.apps.googleusercontent.com

# Configurações de Log
# -------------------
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Habilitar logs detalhados
DEBUG=false

# Configurações de Rate Limiting
# ------------------------------
# Número máximo de requests por IP por janela de tempo
RATE_LIMIT_MAX=100

# Janela de tempo em minutos
RATE_LIMIT_WINDOW_MS=900000

# Configurações de SSL
# -------------------
# Habilitar SSL para conexões com banco
SSL_ENABLED=true

# Configurações de Timeout
# ------------------------
# Timeout de conexão com banco (ms)
DB_CONNECTION_TIMEOUT=10000

# Timeout de idle (ms)
DB_IDLE_TIMEOUT=30000

# Configurações de Pool de Conexões
# ---------------------------------
# Número máximo de conexões no pool
DB_MAX_CONNECTIONS=20

# Número mínimo de conexões no pool
DB_MIN_CONNECTIONS=2
